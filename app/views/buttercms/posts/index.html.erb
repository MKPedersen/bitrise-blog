<%= render :partial => 'hero' %>

<div class="content-wrapper">
  <h2>Featured</h2>
  <!-- Featured post -->
  <div class="featured">
    <%= render :partial => 'featured_post', :locals => {:post => @featured_post} %>
  </div>

  <h2>Articles</h2>
  <div class="articles">
    <!-- List of posts -->
    <% @posts.each do |post| %>
      <%= render :partial => 'post', :locals => {:post => post} %>
    <% end %>
  </div>

  <!-- Pagination links -->
  <div>
    <% if @previous_page %>
      <%= link_to "Prev", buttercms_blog_path(:page => @previous_page) %>
    <% end %>

    <% if @next_page %>
      <%= link_to "Next", buttercms_blog_path(:page => @next_page) %>
    <% end %>
  </div>
</div>
