<div class="article-container">
  <!-- Featured image -->
  <div class="image-container">
    <%= image_tag(post.featured_image) if post.featured_image %>
  </div>

  <div class="article">
    <!-- Post title -->
    <h2><%= link_to post.title, buttercms_post_path(post.slug), :title => post.title %></h2>

    <!-- Post author -->
    by <%= link_to "#{post.author.first_name} #{post.author.last_name}", buttercms_author_path(post.author.slug) %>

    <!-- Post summary -->
    <p><%= post.summary %></p>

    <!-- Post categories -->
    <!-- <% post.categories.each do |category| %>
      <%= link_to category.name, buttercms_category_path(category.slug), :title => category.name %>
    <% end %> -->

    <div class="more">
      <%= link_to 'read more...', buttercms_post_path(post.slug), :title => 'read more...' %>
    </div>
  </div>
</div>
