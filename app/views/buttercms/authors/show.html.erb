<%= content_for :html_title, "#{@author.first_name} #{@author.last_name}" %>
<%= content_for :canonical_url, 'author/' + @author.slug %>
<%= content_for :meta_description, @author.bio %>
<%= content_for :og_title, "Bitrise Blog - All articles by #{@author.first_name} #{@author.last_name}" %>
<%= content_for :og_description, "Bitrise Blog - Mobile Continuous Integration and Delivery for your whole team, with dozens of integrations for your favourite services." %>
<%= content_for :og_image, "https://www.bitrise.io/assets/placeholders/website-social-embed.png" %>
<%= content_for :og_image_width, "1910" %>
<%= content_for :og_image_height, "1000" %>

<%= render partial: 'author_header', locals: {author: @author} %>
<div class="author-content">
  <!-- List of posts -->
  <%= react_component('AuthorArticles', {author: @author}) %>
</div>
<%= render :partial => 'buttercms/base/try_bitrise' %>
