<%= content_for :html_title, @category.name.capitalize %>
<%= content_for :canonical_url, 'categories/' + @category.slug %>
<%= content_for :og_title, "Bitrise Blog - Posts in #{@category.name.capitalize}" %>
<%= content_for :og_description, "Bitrise Blog - Mobile Continuous Integration and Delivery for your whole team, with dozens of integrations for your favourite services." %>
<%= content_for :og_image, "https://www.bitrise.io/assets/placeholders/website-social-embed.png" %>
<%= content_for :og_image_width, "1910" %>
<%= content_for :og_image_height, "1000" %>
<%= render :partial => 'hero' %>

<div class="category-content">
  <div class="category-header">
    <!-- Category name -->
    <h2>Articles for <span class="category-name"><%= @category.name %></span></h2>
  </div>

  <!-- List of posts -->
  <%= react_component('CategoryArticles', {category: @category}) %>


</div>
<%= render :partial => 'buttercms/base/try_bitrise' %>